<odoo>
    <data>


        <record id="sale_order_email_partner" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="name">Sale Order Email Parner</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="action_custom_email_send" string="Send by Email2" type="object" states="draft,sent design" class="btn-primary"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="email_partner" widget="email"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>