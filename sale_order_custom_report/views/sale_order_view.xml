        <record id="sale_order_mrp_custom_report_button" model="ir.ui.view">
            <field name="model">mrp.production</field>
            <field name="name">Sale MRP Button Custom Report</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="print_custom_sale_report" type="object" string="Print" class="o_sale_print"/>
                </xpath>

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="sale_id" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="mrp_production_form_view_design" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.design</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="attachments_page" string="Attachments">
                        <field name="attachment_ids" widget="many2many_binary" string="Attachments" colspan="2" readonly="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
