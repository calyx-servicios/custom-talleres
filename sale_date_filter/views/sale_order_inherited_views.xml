    <!-- QUOTATIONS FILTER VIEW -->
    <record id="view_sale_quotation_filter" model="ir.ui.view">
      <field name="name">sale.order.quotation.date.filter</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
      <field name="arch" type="xml">
        <xpath expr="//group[1]" position="inside">
        <filter name="confirmation_date_no_time" string="Confirmation Date No Time" context="{'group_by': 'confirmation_date_no_time'}"/>
            <!-- <filter name="filter_date_order" string="Date"/> -->
        </xpath>
      </field>
    </record>



    <!-- SALE ORDER VIEW -->
    <record id="sale_order_filter_order_date_view" model="ir.ui.view">
        <field name="name">sale.order.filter.order.date.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <!-- TREE VIEW -->
            <xpath expr="//field[@name='confirmation_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="date_order_date"/>
                <field name="confirmation_date_no_time"/>
            </xpath>

        </field>
    </record>

    <!-- SALE ORDER FILTER -->
    <record id="sale_order_date_filter" model="ir.ui.view">
      <field name="name">sale.order.date.filter</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
      <field name="arch" type="xml">
        <xpath expr="//group[1]" position="inside">
            <filter name="confirmation_date_no_time" string="Confirmation Date No Time" context="{'group_by': 'confirmation_date_no_time'}"/>
        </xpath>
      </field>
    </record>


<!-- SALE REPORT FILTER -->
    <record id="report_date_order_filter" model="ir.ui.view">
      <field name="name">sale.report.date.filter</field>
      <field name="model">sale.report</field>
      <field name="inherit_id" ref="sale.view_order_product_pivot"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='confirmation_date']" position="replace">
            <field name="confirmation_date_no_time"/>
        </xpath>
      </field>
    </record>
</odoo>