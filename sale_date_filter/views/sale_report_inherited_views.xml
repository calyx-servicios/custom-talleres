<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_report_date_filter" model="ir.ui.view">
        <field name="name">sale.report.date.filter</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="confirmation_date_no_time" interval="month" type="row"/>
                <field name="date_order_date" interval="month" type="row"/>
                <field name="sale_order_date" interval="month" type="row"/>
            </xpath>
        </field>
    </record>
</odoo>